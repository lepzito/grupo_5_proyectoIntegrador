<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("./partials/head") %>
    <link rel="stylesheet" href="\css\product-card.css" />
    <link rel="stylesheet" href="\css\styles-index.css" />
    <link rel="stylesheet" href="\css\slider-infito.css" />
    <link rel="stylesheet" href="\css\productResults.css" />
  </head>
  <body>
    <!-- Header -->
    <%- include("./partials/header") %>
    <!-- Page content -->
    <main>
      <!-- Ultimas novedades productos -->
      <section class="Results">
        <div class="latest-title"><h3>Resultados de tu busqueda....</h3></div>
        <div class="carousel-container">
          <%productosResultantes.forEach((product)=>{%>

          <div class="product-card">
            <a href="/products/product/<%= product.id%>">
              <div class="container-product-image">
                <img
                  class="product-image"
                  src="<%=product.img %>"
                  alt="productosNovedad"
                />
              </div>
              <div class="container-descripcion-product">
                <div class="product-name">
                  <p><%= product.nombre %></p>
                </div>
                <div class="product-price">
                  <span><%= product.precio %></span>
                </div>
              </div>
            </a>
          </div>
          <%});%>
        </div>
      </section>

      <%- include("./partials/slider-marcas") %>
    </main>
    <!-- Footer -->
    <%- include("./partials/footer") %>
  </body>
</html>
