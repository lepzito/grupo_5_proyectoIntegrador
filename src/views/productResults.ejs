<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <!-- Header -->
    <%- include("./partials/header") %>
    <!-- Page content -->
    <main>
      <!-- Ultimas novedades productos -->
      <section class="Results">
        <div class="latest-title"><h3>Resultados de tu busqueda....</h3></div>
        <div class="carousel-container">
          <%productosResultantes.forEach((product)=>{%>

          <div class="product-card">
            <a href="/products/product/<%= product.id%>">
              <div class="container-product-image">
                <img
                  class="product-image"
                  src="<%=product.img %>"
                  alt="productosNovedad"
                />
              </div>
              <div class="container-descripcion-product">
                <div class="product-name">
                  <p><%= product.nombre %></p>
                </div>
                <div class="product-price">
                  <span><%= product.precio %></span>
                </div>
              </div>
            </a>
          </div>
          <%});%>
        </div>
        <div class="see-more">
          <a href=""><span>VER TODO</span></a>
        </div>
      </section>

      <%- include("./partials/slider-marcas") %>
    </main>
    <!-- Footer -->
    <%- include("./partials/footer") %>
  </body>
</html>
