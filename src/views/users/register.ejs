                            placeholder="Apellido" required />
                        <input type="email" class="input-field" id="email" name="email" placeholder="Email" required />
                        <input type="password" class="input-field" id="password" name="password"
                            placeholder="ContraseÃ±a" required />
                        <input type="text" class="input-field" id="categoria" name="categoria" placeholder="Categoria"
                            required />
                        <div class="send-image">
                            <label for="imagen">Foto de Perfil</label>
                            <input type="file" name="userImage">
                        </div>
                        <button type="submit" class="submit-btn">Enviar</button>
                    </form>
                </div>

            </div>
            </div>


        </main>
        <!-- Footer -->
        <%- include("../partials/footer") %>
</body>

</html>